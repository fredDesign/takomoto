
<!doctype html>
<html class="no-js" dir="{% if dir %}{{dir}}{% else %}{{site.dir}}{% endif %}" lang="{% if lang %}{{lang}}{% else %}{{site.lang}}{% endif %}">
<head>
	{% include 'components/partials/meta.njk' %}
</head>
<body id="tkm-{{layout}}">

	<div class="tkm-wrapper">
		{% if header == "light" %}
		{% include "components/partials/header-light.njk" %}
		{% else %}
		{% include "components/partials/header.njk" %}
		{% endif %}

		{{ content | safe }}

		{% include "components/partials/footer.njk" %}
	</div>

	{% include "components/partials/scroll-top.njk" %}

    {% if helpers.environment == "development" %}
	<script src="/assets/3rdparty/prism/prism.js" type="text/javascript"></script>
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/swiper.js"></script>
    <script src="/assets/js/app.js"></script>
	<script src="https://www.gstatic.com/firebasejs/5.0.4/firebase.js"></script>
    {% else %}
		<script src="/assets/3rdparty/prism/prism.js" type="text/javascript"></script>
		<script src="/assets/js/jquery.js"></script>
		<script src="/assets/js/swiper.js"></script>
		<script src="/assets/js/app.js"></script>
		<script src="https://www.gstatic.com/firebasejs/5.0.4/firebase.js"></script>
    {% endif %}
</body>
</html>
